# Mistari hii miwili ni ya lazima kwa Codemagic kupata plugins
load File.join(File.dirname(File.realpath(__FILE__)), 'Generated.xcconfig')

def flutter_root
  generated_xcode_build_settings = Hash[*File.read(File.join(__dir__, 'Generated.xcconfig')).lines.map { |line| line.strip.split('=') }.flatten]
  generated_xcode_build_settings['FLUTTER_ROOT']
end

load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

platform :ios, '15.0'

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # Hii inatatua kosa la app_links
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
  end
end