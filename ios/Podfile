# 1. Hii mistari miwili ni ya lazima ili Podfile ijue Flutter ni nini
rebase_path = File.join('..', '.flutter-plugins-dependencies')
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), Gem.loaded_specs['flutter'].full_gem_path) if Gem.loaded_specs['flutter']

# 2. Set platform to 15.0 kwa ajili ya Firebase
platform :ios, '15.0'

install! 'cocoapods', :deterministic_uuids => false

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Sasa hii amri itafanya kazi bila kosa
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
  end
end