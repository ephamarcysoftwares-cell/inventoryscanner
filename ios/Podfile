# 1. Mistari hii miwili ni muhimu sana kwa miradi ya Flutter
platform :ios, '15.0'

# Inatafuta mazingira ya Flutter kule Codemagic
load File.join(File.dirname(File.realpath(__FILE__)), 'Generated.xcconfig')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Badala ya flutter_install_all_ios_pods, tunatumia mfumo wa ndani wa Flutter
  # kupitia Generated.xcconfig ulioubeba kwenye mradi wako.
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      # Inasaidia kuzuia matatizo ya architectures kule Codemagic
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
    end
  end
end